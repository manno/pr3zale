<div class="container sign-in" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong><%=t"users.Edit Account"%></strong>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
            <fieldset>
              <div class="row">
                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-user"></i>
                      </span>
                      <%= f.email_field :email, placeholder: t("users.your email adress"), autofocus: true, class:"form-control" %>
                    </div>
                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <p class="help-block"><%=t"users.Currently waiting confirmation for"%>: <%= resource.unconfirmed_email %></p>
                    <% end %>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-lock"></i>
                      </span>
                      <%= f.password_field :password, placeholder: t("users.new_password"), class:"form-control",type:"password" %>
                    </div>
                    <p class="help-block"><%=t"users.leave blank if you don't want to change it" %></p>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-lock"></i>
                      </span>
                      <%= f.password_field :password_confirmation, placeholder: t("users.password_confirmation"), class:"form-control",type:"password" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-lock"></i>
                      </span>
                      <%= f.password_field :current_password, placeholder: t("users.current_password"), class:"form-control",type:"password" %>
                    </div>
                    <p class="help-block"><%=t"users.we need your current password to confirm your changes"%></p>
                  </div>
                  <div class="form-group">
                    <%= f.submit t('users.Save'),class:"btn btn-lg btn-primary btn-block" %>
                  </div>
                </div>
              </div>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container sign-in" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <strong><%=t"users.Delete Account"%></strong>
        </div>
        <div class="panel-body">
          <fieldset>
            <div class="row">
              <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                <%= button_to t("users.Cancel my account"), registration_path(resource_name), data: { confirm: t("users.Are you sure to cancel this account?") }, method: :delete, class:"btn btn-danger btn-block" %>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>
