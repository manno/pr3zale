<div class="container sign-in" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong><%=t"users.Sign in to continue"%></strong>
        </div>
        <div class="panel-body">
          <%= form_for(:user, :url => session_path(:user)) do |f| %>
            <fieldset>
              <div class="row">
                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-user"></i>
                      </span>
                      <%= f.text_field :email, placeholder: t("users.your email adress"), autofocus: true, class:"form-control", value: params[:email] %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-lock"></i>
                      </span>
                      <%= f.password_field :password, placeholder: t("users.password"), class:"form-control",type:"password" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.submit t('users.Sign in'),class:"btn btn-lg btn-primary btn-block" %>
                  </div>
                  <div class="form-group">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                  </div>
                </div>
              </div>
            </fieldset>
          <% end %>
        </div>
        <div class="panel-footer ">
          <%=t"users.Forgot your password"%>? <%= link_to t("users.Click here"), new_password_path(:user) %>
        </div>
              </div>
    </div>
  </div>
</div>
