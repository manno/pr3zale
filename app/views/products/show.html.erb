<div class="row">
  <%@product.images.each do |image|%>
    <div class="col-xs-6 col-md-3">
      <%= link_to image.image.url do
        image_tag image.image.url, class: "thumbnail"
      end %>
    </div>
  <% end %>
</div>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Tax:</strong>
  <%= @product.tax %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<% if can? :edit, @product %>
  <p>
    <strong>Quantity:</strong>
    <%= @product.quantity %>
  </p>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
